{#

	Gallery 1

	@param {matrix} gallery1ImageSlides
		[
			imageSlide:
			[
				image {asset - image - max 1}
				headingText {plain text}
				textContent {redactor}
			]
		]

#}

{# Macros #}
{% import 'authenticamplify/_macros/_image-transform' as imageTransform %}

{# Parameters #}
{% set gallery1ImageSlides = params.gallery1ImageSlides ?? null %}

{# Variables #}
{%
	set imgResize = {
		mode: 'crop',
		width: 445,
		height: 360
	}
%}

{# Output #}
<section data-component data-gallery-1>

		<div class="slick-slider">

			{% for imageSlide in gallery1ImageSlides %}

				{% set imageUrl = imageTransform.imageTransform(imageSlide.image.one, imgResize) %}

				<div class="gallery-item">

					<div class="image">
						<img src="{{ imageUrl }}">
					</div>

					<div class="content">
						<h3>{{ imageSlide.headingText }}</h3>
						{{ imageSlide.textContent }}
					</div>

				</div>

			{% endfor %}

		</div>

</section>