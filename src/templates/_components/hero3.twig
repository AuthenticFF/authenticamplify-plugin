{#

	Hero 3

	@param {matrix} hero3BgImageSlides
		[
			backgroundImageSlide:
			[
				backgroundImage {asset - image - max 1}
				headingText {plain text}
				subheadingText {plain text}
			]
		]

#}

{# Macros #}
{% import 'authenticamplify/_macros/_image-transform' as imageTransform %}

{# Parameters #}
{% set hero3BgImageSlides = params.hero3BgImageSlides ?? null %}

{# Variables #}
{%
	set heroImgResize = {
		mode: 'crop',
		width: 1680,
		height: 750
	}
%}

{# Output #}
<section data-hero-3 data-component="hero">

	<div class="slider Wallop Wallop--fade">

		<div class="Wallop-list" data-equalizer data-equalize-on='' data-equalize-on-stack='true'>

			{% for bgImageSlide in hero3BgImageSlides %}

				{% set heroImageUrl = imageTransform.imageTransform(bgImageSlide.backgroundImage.one, heroImgResize) %}

				<div class="Wallop-item hero-slide" style="background-image: url( {{ heroImageUrl }} );">

					<div class="grid-container">

						<div class="grid-x align-middle">

							<div class="cell small-12 medium-11 large-7 large-offset-1" data-equalizer-watch>

								<div class="heading">
									{{ bgImageSlide.headingText }}
								</div>

								<div class="subheading">
									{{ bgImageSlide.subheadingText }}
								</div>

							</div>

						</div>

					</div>

				</div>

			{% endfor %}

		</div>
		
		{% if hero3BgImageSlides|length > 1 %}

			<div class="grid-container">

				<div class="grid-x">

					<div class="cell small-12 large-11 large-offset-1 slider-dots-nav-cell">
			
						<div class="slider-dots-nav">

							{% for i in range(0, hero3BgImageSlides|length - 1) %}
								<span data-slide-index="{{ i }}"></span>
							{% endfor %}

						</div>

					</div>

				</div>

			</div>

		{% endif %}

	</div>

</section>