{#

	Stats 2

	@param {plain text} stats2SectionTitle
	@param {plain text} stats2HeadingText
	@param {redactor} stats2TextContent
	@param {matrix} stats2stats
		[
			stat:
			[
				number {plain text}
				statTitle {plain text}
				text {plain text}
			]
		]

#}

{# Parameters #}
{% set stats2SectionTitle = params.stats2SectionTitle ?? '' %}
{% set stats2HeadingText = params.stats2HeadingText ?? '' %}
{% set stats2TextContent = params.stats2TextContent ?? '' %}
{% set stats2stats = params.stats2stats ?? null %}

{# Output #}
<section data-stats-2 data-component>

	<div class="grid-container">

		{% if stats2SectionTitle != '' %}

			<div class="grid-x">

				<div class="cell small-12">

					<h2 class="section-title">{{ stats2SectionTitle }}</h2>

				</div>

			</div>

		{% endif %}

		<div class="grid-x top-row">

			<div class="cell small-12 large-5">

				<h3 class="component-title">{{ stats2HeadingText }}</h3>

			</div>

			<div class="cell small-12 large-7 text-content">

				{{ stats2TextContent }}

			</div>

		</div>

		<div class="grid-x">

			<div class="cell small-12">

				<div class="grid-x small-up-1 medium-up-2 large-up-4">

					{% for stat in stats2stats %}

						<div class="cell stat-item">

							<div class="number">{{ stat.number|nl2br }}</div>

							<div class="title">{{ stat.statTitle }}</div>

							<div class="subtext">{{ stat.text }}</div>

						</div>

					{% endfor %}

				</div>

			</div>

		</div>

	</div>

</section>