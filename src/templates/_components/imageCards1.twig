{#

	Image Cards 1

	@param {matrix} imageCards1Cards
		[
			tallImageCard:
			[
				tallImage {asset - image - max 1}
				titleText {plain text}
				textContent {plain text}
				cardLinkEntry {entries - max 1}
				cardLinkUrl {plain text}
			]
		]

#}

{# Parameters #}
{% set imageCards1Cards = params.imageCards1Cards ?? null %}

{# Variables #}
{%
	set tallImgResize = {
		mode: 'crop',
		width: 640,
		height: 720
	}
%}

{# Output #}
<section data-component data-image-cards-1>

	<div class="grid-container">

		<div class="grid-x grid-margin-x small-up-1 medium-up-2 large-up-4">

			{% for imageCard in imageCards1Cards %}

				{% if imageCard.cardLinkEntry|length %}
					{% set cardLink = imageCard.cardLinkEntry.one.url %}
				{% else %}
					{% set cardLink = imageCard.cardLinkUrl %}
				{% endif %}

				{% set imageUrl = craft.imager.transformImage(imageCard.tallImage.one, tallImgResize).url %}

				<div class="cell">

					{%

						include 'authenticamplify/_elements/imageCard' with {
							imageCardImageUrl: imageUrl,
							imageCardTitleText: imageCard.titleText,
							imageCardTextContent: imageCard.textContent,
							imageCardUrl: cardLink
						}

					%}

				</div>

			{% endfor %}

		</div>

	</div>

</section>