{#

	Footer Contacts

	@param {plain text} footerContactsHeadingText
	@param {matrix} footerContacts
		[
			footerContact:
			[
				contact {redactor}
			]
		]

#}

{# Parameters #}
{% set footerContactsHeadingText = params.footerContactsHeadingText ?? '' %}
{% set footerContacts = params.footerContacts ?? null %}

{# Output #}
<footer data-footer-contacts data-component>

	{% if footerContactsHeadingText != '' %}

		<div class="grid-container">

			<div class="cell small-12">

				<h3 class="component-title">{{ footerContactsHeadingText }}</h3>

			</div>

		</div>

	{% endif %}

	<div class="grid-container">

		<div class="grid-x grid-padding-x logos" data-equalizer data-equalize-on="medium">

			{% for footerContact in footerContacts %}

				<div class="cell medium-auto contact-item">
					{{ footerContact.contact }}
				</div>

			{% endfor %}

		</div>

	</div>

</footer>