{#

	Gallery 5

	@param {matrix} gallery5SquareImageSlides
		[
			squareImageSlide:
			[
				squareImage {asset - image - max 1}
				headingText {plain text}
				subheadingText {plain text}
			]
		]

#}

{# Macros #}
{% import 'authenticamplify/_macros/_image-transform' as imageTransform %}

{# Parameters #}
{% set gallery5SquareImageSlides = params.gallery5SquareImageSlides ?? null %}

{# Variables #}
{%
	set imgResize = {
		mode: 'crop',
		width: 570,
		height: 500
	}
%}

{# Output #}
<section data-gallery-5 data-component>

	<div class="slider Wallop Wallop--fade">
		
		<div class="Wallop-list" data-equalizer data-equalize-on='' data-equalize-on-stack='true'>

			{% for squareImageSlide in gallery5SquareImageSlides %}

				{% set galleryImageUrl = imageTransform.imageTransform(squareImageSlide.squareImage.one, imgResize) %}

				<div class="Wallop-item gallery-slide">

					<div class="grid-container">

						<div class="grid-x align-middle" data-equalizer-watch>

							<div class="cell small-12 large-7 text-content">

								<div class="heading">
									{{ squareImageSlide.headingText }}
								</div>
								<div class="subheading">
									{{ squareImageSlide.subheadingText }}
								</div>

							</div>

							<div class="cell small-12 large-5 image">

								<img src="{{ galleryImageUrl }}">

							</div>

						</div>

					</div>

				</div>

			{% endfor %}

		</div>

		{% if gallery5SquareImageSlides|length > 1 %}

			<div class="grid-container">
			
				<div class="slider-dots-nav">

					{% for i in range(0, gallery5SquareImageSlides|length - 1) %}
						<span data-slide-index="{{ i }}"></span>
					{% endfor %}

				</div>

			</div>

		{% endif %}

	</div>

</section>