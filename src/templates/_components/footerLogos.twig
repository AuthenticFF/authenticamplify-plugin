{#

	Footer Logos

	@param {matrix} footerLogos
		[
			footerLogo:
			[
				logoImage {asset - image - max 1}
				text {plain text}
			]
		]

#}

{# Parameters #}
{% set footerLogos = params.footerLogos ?? null %}

{# Variables #}
{%
	set logoImgResize = {
		mode: 'fit',
		width: 100,
		height: 60
	}
%}

{# Output #}
<footer data-footer-logos data-component>

	<div class="grid-container">

		<div class="grid-x logos" data-equalizer data-equalize-on="medium">

			{% for logoItem in footerLogos %}

				{% set logoImageUrl = craft.imager.transformImage(logoItem.logoImage.one, logoImgResize).url %}

				<div class="cell medium-auto logo-item">
					<div class="logo" data-equalizer-watch>
						<img src="{{ logoImageUrl }}">
					</div>
					<div class="text">
						{{ logoItem.text }}
					</div>
				</div>

			{% endfor %}

		</div>

	</div>

</footer>