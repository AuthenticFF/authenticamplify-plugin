{#

	Content With Links 3

	@param {plain text} contentLinks3SectionTitle
	@param {plain text} contentLinks3HeadingText
	@param {redactor} contentLinks3TextContent
	@param {matrix} contentLinks3Links
		[
			link:
			[
				linkText {plain text}
				linkEntry {entries - max 1}
				linkUrl {plain text}
			]
		]
	@param {plain text} contentLinks3CtaText
	@param {entries - max 1} contentLinks3CtaLink
	@param {plain text} contentLinks3CtaUrl

#}

{# Parameters #}
{% set contentLinks3SectionTitle = params.contentLinks3SectionTitle ?? '' %}
{% set contentLinks3HeadingText = params.contentLinks3HeadingText ?? '' %}
{% set contentLinks3TextContent = params.contentLinks3TextContent ?? '' %}
{% set contentLinks3Links = params.contentLinks3Links ?? null %}
{% set contentLinks3CtaText = params.contentLinks3CtaText ?? '' %}
{% set contentLinks3CtaLink = params.contentLinks3CtaLink ?? null %}
{% set contentLinks3CtaUrl = params.contentLinks3CtaUrl ?? '' %}

{# Variables #}
{% if contentLinks3CtaLink|length %}
	{% set ctaHref = contentLinks3CtaLink.one.url %}
{% else %}
	{% set ctaHref = contentLinks3CtaUrl %}
{% endif %}

{# Output #}
<section data-content-with-links-3 data-component>

	<div class="grid-container">

		{% if contentLinks3SectionTitle != '' %}

			<div class="grid-x">

				<div class="cell small-12">

					<h2 class="section-title">{{ contentLinks3SectionTitle }}</h2>

				</div>

			</div>

		{% endif %}

		<div class="grid-x">

			<div class="cell small-12 large-10">

				<h3 class="component-title">{{ contentLinks3HeadingText }}</h3>

			</div>

		</div>

		<div class="grid-x">

			{# one column #}
			<div class="cell small-12 medium-8 large-8 text-content">

				{{ contentLinks3TextContent }}

			</div>

			<div class="cell small-12 medium-4 large-3 large-offset-1 sidebar-links">

				<ul>

					{% for link in contentLinks3Links %}

						{% if link.linkEntry|length %}
							{% set linkHref = link.linkEntry.one.url %}
						{% else %}
							{% set linkHref = link.linkUrl %}
						{% endif %}

						<li><a href="{{ linkHref }}">{{ link.linkText }}</a></li>

					{% endfor %}

				</ul>

			</div>

		</div>

		{% if contentLinks3CtaText != '' %}

			<div class="grid-x">

				<div class="cell small-12 large-8 cta">

					<a href="{{ ctaHref }}" class="button button-square button-black">{{ contentLinks3CtaText }}</a>

				</div>

			</div>

		{% endif %}

	</div>

</section>