{#

	Content With Links 2

	@param {plain text} contentLinks2SectionTitle
	@param {plain text} contentLinks2HeadingText
	@param {redactor} contentLinks2TextContent
	@param {matrix} contentLinks2Links
		[
			link:
			[
				linkEntry {linkit}
			]
		]
	@param {linkit} contentLinks2CtaLink

#}

{# Parameters #}
{% set contentLinks2SectionTitle = params.contentLinks2SectionTitle ?? '' %}
{% set contentLinks2HeadingText = params.contentLinks2HeadingText ?? '' %}
{% set contentLinks2TextContent = params.contentLinks2TextContent ?? '' %}
{% set contentLinks2Links = params.contentLinks2Links ?? null %}
{% set contentLinks2CtaLink = params.contentLinks2CtaLink ?? null %}

{# Variables #}
{% if contentLinks2CtaLink|length %}
	{% set ctaHref = contentLinks2CtaLink.url %}
{% else %}
	{% set ctaHref = '#' %}
{% endif %}

{# Output #}
<section data-component data-content-with-links-2>

	<div class="grid-container">

		{% if contentLinks2SectionTitle != '' %}

			<div class="grid-x">

				<div class="cell small-12">

					<h2 class="section-title">{{ contentLinks2SectionTitle }}</h2>

				</div>

			</div>

		{% endif %}

		<div class="grid-x">

			<div class="cell small-12 medium-12 large-3">

				<h3 class="component-title">{{ contentLinks2HeadingText }}</h3>

			</div>

			<div class="cell small-12 medium-8 large-6 text-content">

				{{ contentLinks2TextContent }}

				{% if contentLinks2CtaLink.text != '' %}

					<div class="cta">

						<a href="{{ ctaHref }}" class="button button-square button-black">{{ contentLinks2CtaLink.text }}</a>

					</div>

				{% endif %}

			</div>

			<div class="cell small-12 medium-4 large-3 sidebar-links">

				<ul>

					{% for link in contentLinks2Links %}

						{% set linkHref = link.linkUrl.url %}

						<li><a href="{{ linkHref }}">{{ link.linkUrl.text }}</a></li>

					{% endfor %}

				</ul>

			</div>

		</div>

	</div>

</section>