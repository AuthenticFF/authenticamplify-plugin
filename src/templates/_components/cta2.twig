{#

	CTA 2

	@param {assets - images - max 1} cta2Image
	@param {plain text} cta2HeadingText
	@param {redactor} cta2TextContent
	@param {plain text} cta2CtaText
	@param {entries - max 1} cta2CtaLink
	@param {plain text} cta2CtaUrl

#}

{# Parameters #}
{% set cta2Image = params.cta2Image ?? null %}
{% set cta2HeadingText = params.cta2HeadingText ?? null %}
{% set cta2TextContent = params.cta2TextContent ?? null %}
{% set cta2CtaText = params.cta2CtaText ?? null %}
{% set cta2CtaLink = params.cta2CtaLink ?? null %}
{% set cta2CtaUrl = params.cta2CtaUrl ?? null %}

{# Variables #}
{%
	set imgResize = {
		mode: 'crop',
		width: 720,
		height: 750
	}
%}
{% set imageUrl = craft.imager.transformImage(cta2Image.one, imgResize).url %}

{% if cta2CtaLink|length %}
	{% set ctaHref = cta2CtaLink.one.url %}
{% else %}
	{% set ctaHref = cta2CtaUrl %}
{% endif %}

{# Output #}
<section data-component data-cta-2>

	<div class="grid-container">

		<div class="grid-x">

			<div class="cell small-12 medium-10 medium-offset-1 large-6 large-offset-0 image-cell" style="background-image: url( {{ imageUrl }} );"></div>

			<div class="cell small-12 medium-10 medium-offset-1 large-6 large-offset-0 content-cell" style="background-color: #EBEBEB;">

				<div class="content">

					<h2 class="heading">{{ cta2HeadingText }}</h2>

					{{ cta2TextContent }}

					{% if cta2CtaText != '' %}

						<div class="cta">
							<a href="{{ ctaHref }}" class="button button-square button-black">{{ cta2CtaText }}</a>
						</div>

					{% endif %}

				</div>

			</div>

		</div>

	</div>

</section>