{#

	Map 1

	@param {plain text} map1HeadingText
	@param {redactor} map1TextContent
	@param {simplemap} map1Settings

#}

{# Parameters #}
{% set map1HeadingText = params.map1HeadingText ?? '' %}
{% set map1TextContent = params.map1TextContent ?? '' %}
{% set map1Settings = params.map1Settings ?? null %}

{# Output #}
<section data-component data-map-1 data-map-lat="{{ map1Settings.lat }}" data-map-long="{{ map1Settings.lng }}" data-map-zoom="{{ map1Settings.zoom }}">

	<div class="grid-container">

		<div class="grid-x">

			<div class="cell small-12">

				<div id="map-container">
				</div>

			</div>

		</div>

		<div class="grid-x">

			<div class="cell small-12 large-8">

				<h2 class="heading">{{ map1HeadingText }}</h2>

				{{ map1TextContent }}

			</div>

		</div>

	</div>

</section>