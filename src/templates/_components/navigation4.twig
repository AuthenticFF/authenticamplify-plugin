{#

	Navigation 4

	@param {asset - image - max 1} nav4LogoImage
	@param {string} nav4NextBlockType

#}

{# Parameters #}
{% set nav4LogoImage = params.nav4LogoImage ?? null %}
{% set nav4NextBlockType = params.nav4NextBlockType ?? '' %}

{# Variables #}
{% set logoImgAsset = nav4LogoImage.one %}
{%
	set logoResize = {
		mode: 'fit',
		width: 84,
		height: 84
	}
%}
{% set logoImageUrl = craft.imager.transformImage(logoImgAsset, logoResize).url %}

{% 
	if nav4NextBlockType|lower == 'hero1'
	or nav4NextBlockType|lower == 'hero2'
	or nav4NextBlockType|lower == 'hero3'
%}
	{% set heroOverlay = true %}
{% else %}
	{% set heroOverlay = false %}
{% endif %}

{# Output #}
<section class="navigation{% if heroOverlay %} hero-overlay{% endif %}" data-navigation-4>

	<div class="grid-container">

		<header class="grid-x">

			<div class="logo-bar cell small-6 large-3">

				<a href="/" class="logo"><img src="{{ logoImageUrl }}" alt="logo"></a>

			</div>

			<nav class="cell small-6 large-9 show-for-large">

				<ul>

					{% include "authenticamplify/_includes/site-nav" %}

				</ul>

				<div class="social-links">
					
					{%
						include 'authenticamplify/_includes/social-links'
					%}

				</div>

			</nav>

			<nav class="cell small-6 mobile-nav hide-for-large">
				<div class="mobile-nav-trigger">
					<span></span>
					<span></span>
					<span></span>
				</div>
			</nav>

		</header>

	</div>

</section>