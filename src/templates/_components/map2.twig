{#

	Map 2

	@param {plain text} map2HeadingText
	@param {redactor} map2TextContent
	@param {simplemap} map2Settings

#}

{# Parameters #}
{% set map2HeadingText = params.map2HeadingText ?? '' %}
{% set map2TextContent = params.map2TextContent ?? '' %}
{% set map2Settings = params.map2Settings ?? null %}

{# Output #}
<section data-component data-map-2 data-map-lat="{{ map2Settings.lat }}" data-map-long="{{ map2Settings.lng }}" data-map-zoom="{{ map2Settings.zoom }}">

	<div class="grid-container">

		<div class="grid-x grid-margin-x align-middle">

			<div class="cell small-12 large-8">

				<div id="map-container">
				</div>

			</div>

			<div class="cell small-12 large-4">

				<h2 class="heading">{{ map2HeadingText }}</h2>

				{{ map2TextContent }}

			</div>

		</div>

	</div>

</section>