{#

	Hero 6

	@param {matrix} hero6WideImageSlides
		[
			wideImageSlide:
			[
				wideImage {asset - image - max 1}
				headingText {plain text}
				subheadingText {plain text}
			]
		]

#}

{# Parameters #}
{% set hero6WideImageSlides = params.hero6WideImageSlides ?? null %}

{# Variables #}
{%
	set heroImgResize = {
		mode: 'crop',
		width: 1440,
		height: 500
	}
%}

{# Output #}
<section data-hero-6 data-component>

	<div class="grid-container">

		<div class="slider Wallop Wallop--fade">
			
			<div class="Wallop-list" data-equalizer data-equalize-on='' data-equalize-on-stack='true'>

				{% for wideImageSlide in hero6WideImageSlides %}

					{% set heroImageUrl = craft.imager.transformImage(wideImageSlide.wideImage.one, heroImgResize).url %}

					<div class="Wallop-item hero-slide">

						<div class="grid-x">

							<div class="cell small-12 medium-12 large-12 image">

								<img src="{{ heroImageUrl }}">

							</div>

							<div class="cell small-12 medium-9 medium-offset-2 large-7 large-offset-4 text-content" data-equalizer-watch>

								<div class="heading">
									{{ wideImageSlide.headingText }}
								</div>
								<div class="subheading">
									{{ wideImageSlide.subheadingText }}
								</div>

							</div>

						</div>

					</div>

				{% endfor %}

			</div>

			{% if hero6WideImageSlides|length > 1 %}

				<div class="slider-dots-nav">

					{% for i in range(0, hero6WideImageSlides|length - 1) %}
						<span data-slide-index="{{ i }}"></span>
					{% endfor %}

				</div>

			{% endif %}

		</div>

	</div>

</section>