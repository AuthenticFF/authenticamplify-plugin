{#

	Content 2

	@param {plain text} content2SectionTitle
	@param {plain text} content2HeadingText
	@param {redactor} content2TextContent
	@param {entries - max 1} content2CtaLink

#}

{# Parameters #}
{% set content2SectionTitle = params.content2SectionTitle ?? '' %}
{% set content2HeadingText = params.content2HeadingText ?? '' %}
{% set content2TextContent = params.content2TextContent ?? '' %}
{% set content2CtaLink = params.content2CtaLink ?? null %}

{# Variables #}
{% if content2CtaLink|length %}
	{% set ctaHref = content2CtaLink.url %}
{% else %}
	{% set ctaHref = '#' %}
{% endif %}

{# Output #}
<section data-content-2 data-component>

	<div class="grid-container">

		{% if content2SectionTitle != '' %}

			<div class="grid-x">

				<div class="cell small-12">

					<h2 class="section-title">{{ content2SectionTitle }}</h2>

				</div>

			</div>

		{% endif %}

		<div class="grid-x">

			<div class="cell small-12 medium-6 large-5">

				<h3 class="component-title">{{ content2HeadingText }}</h3>

				{% if content2CtaLink.text != '' %}

					<div class="cta">

						<a href="{{ ctaHref }}" class="button button-square button-black">{{ content2CtaLink.text }}</a>

					</div>

				{% endif %}

			</div>

			<div class="cell small-12 medium-6 large-4 large-offset-1 text-content">

				{{ content2TextContent }}

			</div>

		</div>

	</div>

</section>